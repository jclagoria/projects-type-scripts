{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "rules": {
    "member-access": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}